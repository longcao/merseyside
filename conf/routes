# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.BlogController.frontpage
GET     /about                      controllers.Application.about

GET     /resume                     controllers.Application.resume

# Blog
GET     /editor                     controllers.BlogController.editor
GET     /blog                       controllers.BlogController.frontpage
GET     /blog/:slug.json            controllers.BlogController.get(slug: String)
GET     /blog/:slug                 controllers.BlogController.permalink(slug: String)
GET     /blog/:slug/                controllers.BlogController.permalink(slug: String)
GET     /blog/:slug/:title          controllers.BlogController.permalinkWithTitle(slug: String, title: String)

# Blog crud
POST    /save                       controllers.BlogController.save

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
