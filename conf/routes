# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.home
GET     /about                      controllers.Application.about

GET     /resume                     controllers.Application.resume

# Blog
GET     /editor                     controllers.BlogController.editor
GET     /blog                       controllers.BlogController.frontpage
GET     /blog/:id                   controllers.BlogController.permalink(id: String)
GET     /blog/:id/                  controllers.BlogController.permalink(id: String)
GET     /blog/:id/:title            controllers.BlogController.permalinkWithTitle(id: String, title: String)

# Blog crud
POST    /save                       controllers.BlogController.save
GET     /blog.json/:id              controllers.BlogController.get(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
