# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.home
GET     /about                      controllers.Application.about

# Blog
GET     /editor                     controllers.BlogController.editor
GET     /blog                       controllers.BlogController.blog
#GET     /blog/$id<[0-9]+>           controllers.BlogController.permalink(id: Long)

# Blog crud
POST    /save                       controllers.BlogController.save
GET     /blog/:id                   controllers.BlogController.get(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
